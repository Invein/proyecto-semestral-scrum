extend ../../layout

block content
        <div id="container" class="container">
            <div class="col-sm-8 col-sm-offset-2 main">
               
                <!--col-sm-6-->

                <div id="formregister" class="col-sm-12">
                    <h1 id="titleregister">Configuracion de usuario</h1>
                    <div class="text-center">
                      <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSODALYDYo2dqN0DG_kPNi2X7EAy1K8SpRRZQWkNv9alC62IHggOw" class="rounded" alt="...">
                    </div>
                    <p id="formtext">Por favor, ingrese los siguientes datos.</p>

                    <!--div with header-->
                    <form id="user-form"  class="form" >
                        <div class="form-group">
                            <label for="name">Nombre:</label>
                            input(type="text" id="name" name="fullName" class="form-control" value=data.user.fullName)
                        </div>

                        <div class="form-group">
                            <label for="name">Correo:</label>
                            input(type="text" id="email" name="email" class="form-control" value=data.user.email)
                        </div>

                         <div class="form-group">
                            <label for="email">Fecha de nacimiento:</label>
                            input( type="text" name="birthdate" class="form-control" value=value=data.user.birthdate)
                        </div>

                        <div class="form-group">
                            <label for="name">Curp:</label>
                            input( type="text" id="curp" name="curp" class="form-control" value=data.user.curp)
                        </div>

                        <div class="form-group">
                            <label for="name">RFC:</label>
                            input( type="text" id="rfc" name="rfc" class="form-control" value=data.user.rfc)
                        </div>

                        <div class="form-group">
                            <label for="name">Domicilio:</label>
                            input( type="text" id="domicilio" name="address" class="form-control" value=data.user.address)
                        </div>                        

                        div(id="info-user")
                        <div class="text-xs-center">
                            <input type="submit" id="login-btn" name="login-btn" value="Guardar" class="btn btn-deep-purple">
                        </div>

                    </form>
                    <!--/Form with header-->
                    div(class="skills-header")
                        include ../../components/skillsInfo.pug
                        span Habilidades:
                    div(id="skills-container" class="skills-container")
                        each skill in data.user.skills           
                            span(class=skill.rank + "-tag tag") #{skill.name}
                                icon(class="tag-remove-btn glyphicon glyphicon-trash" id=skill._id)
                        span(class="add-tag tag" id="add-tag") agregar                            
                        include ../../components/skillTagForm.pug                
                </div>
                <!--col-sm-6-->


            </div>
            <!--col-sm-8-->

        </div>
  
        <!--container-->


        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="scripts/accountForm.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
