doctype html
html
head
title= title
if links
    each link in links
        link(rel=link.rel, href=link.href)
if scripts   
    each script in scripts
        script(src=script.src)
body
block content
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    <div class="container">
        <div class="col-sm-8 col-sm-offset-2 main">
            <div id="leftside" class="col-sm-6 left-side">
                <h1>Scrum
                    <br>App.</h1>
                <br>
                <p></p>
                <p></p>
                <p></p>
                <p></p>
            </div>
            <!--col-sm-6-->
            <div class="col-sm-6 right-side">
                <h1>Login</h1>
                <p>Don't have an account? Create your account, it takes less than a minute</p>

                <!--Form with header-->
                <form id="login-form" class="form">
                    <div class="form-group">
                        <label for="email">Correo</label>
                        <input type="text" id="email" name="email" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="password">Contraseña</label>
                        <input type="password" id="password" name="password" class="form-control">
                    </div>

                    <div class="text-xs-center">
                        <div id="info"></div>
                        <input value="Iniciar Sesión" type="submit" id="login-btn" name="login-btn" class="btn btn-deep-purple"/>
                        <a href="#" id="register-btn" name="register-btn" class="btn btn-deep-purple">Registrar<a/>
                        
                        <a class="go fab fa-google-plus-square" href="/auth/google"></a>
                        <a class="tw fab fa-twitter" href="/auth/google"></a>
                        <a class="fac fab fa-facebook" href="/auth/google"></a>
                    </div>
                </form>
                <!--/Form with header-->
            </div>
            <!--col-sm-6-->
        </div>
        <!--col-sm-8-->
    </div>
    <!--container-->


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->        
    <script src="scripts/loginForm.js"></script>