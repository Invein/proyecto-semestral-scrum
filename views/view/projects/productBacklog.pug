                        <div>
                            <b class="productBackTitle">Cuando</b>
                            <p class="productBackSpan2"> #{history.criteria.when}</p>
                        </div>
                        <div>
                            <b class="productBackTitle">Entonces</b>
                            <p class="productBackSpan2"> #{history.criteria.then}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    script(src="/scripts/project.js")
    script(src="/scripts/cardHistoryBehavior.js")
