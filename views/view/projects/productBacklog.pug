            <div class="card-containerBack">
                <div class="cardBack row card">
                    <div class="front col">
                        <div>
                            <b class="productBackB">Narrativa</b>
                        </div>
                        <div>
                            <b class="productBackTitle">Prioridad | Tama√±o</b>
                            <p class="productBackSpan"> #{history.priority} | #{history.size}</p>
                        </div>
                        <div>
                            <b class="productBackTitle">Como</b>
                            <p class="productBackSpan"> #{history.narrative.how}</p>
                        </div>
                        <div>
                            <b class="productBackTitle">Quiero</b>
                            <p class="productBackSpan"> #{history.narrative.want}</p>
                        </div>
                        <div>
                        <b class="productBackTitle">De Tal Manera</b>
                            <p class="productBackSpan"> #{history.narrative.way}</p>
                        </div>
                    </div>
                    <div class="back">
                        <div>
                            <b class="productBackB2">Criterios de aceptacion</b>
                        </div>
                        <div>
                            <b class="productBackTitle">Dado</b>
                            <p class="productBackSpan2"> #{history.criteria.given}</p>
                        </div>
                        <div>
                            <b class="productBackTitle">Cuando</b>
                            <p class="productBackSpan2"> #{history.criteria.when}</p>
                        </div>
                        <div>
                            <b class="productBackTitle">Entonces</b>
                            <p class="productBackSpan2"> #{history.criteria.then}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>


